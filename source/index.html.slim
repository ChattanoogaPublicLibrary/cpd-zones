script type='text/template' id='card_template'
  <section class="card">
    <ul>
      <li><img src="{{image}}"/></li>
      <li>{{name}}</li>
      <li><a href="mailto:{{email}}">{{email}}</a></li>
    </ul>
  </section>

script type='text/template' id='zone_name_template'
  <div id="zone_result">
    <p>Your address was found in the <span class="zone-text {{zone}}">{{zone_upper}}</span> zone.</p>
  </div>

section.intro
  h1 Find out who patrols your neighborhood.
  p This application helps Chattanoogans find which CPD zone they live in. Type in a address, like 1001 Broad St., to get started.
section#flash
form#input_form
  div
    input#query name="query" placeholder=("1001 Broad St.") type="text" value=""
    input type="submit" value="Locate"
    em
.zone-results
#map
